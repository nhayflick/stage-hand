<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <center>
      <h1>Listings</h1>

      <% if @listings.length == 0 %>
      <div class="panel panel-default">
        <h4>You haven't created any listings yet.</h4>
      </div>
    <% end %>
    </center>
     <% @listings.each do |listing| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>
            <span style="font-family: 'Ubuntu', sans-serif;">
              <%= listing.name %> / $<%= listing.rate %> <light>each day</light>
              <span class="pull-right form-buttons">
                <%= listing.category %>
                <% if listing.user == current_user %>
                  <%= link_to 'Edit', edit_listing_path(listing), :class => 'btn btn-info' %>
                  <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-warning' %>
                <% else %>
                  <%= link_to "RENT", listing, :class => 'btn btn-scenius' %>
                <% end %>
              </span>
            </span>
          </h4>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-3">
              <center>
                <%= link_to (image_tag listing.listing_images.first.image.url(:thumb), :class => "img-circle"), listing unless listing.listing_images.blank?%>
              </center>
            </div>
            <div class="col-sm-5">
              <%= listing.description %>
            </div>
            <div class="col-sm-4">
              <center>
                <%= link_to (image_tag listing.user.fetch_avatar, :class => "img-circle"), listing.user  %><br>
                <%= listing.user.name %><br>
                <%= listing.user.city %><br>
                <%= listing.user.zipcode %><br>
              </center>
            </div>
          </div
        </div>
      </div>
      </div>
    <% end %>
    <div class="well">
      <center>
        <h4>Make money from your musical equipment without selling it.</h4>
      </center>
      <%= link_to "Rent it on Scenius", new_listing_path, :class => "btn btn-scenius btn-rent-it btn-block" %>
    </div>
  </div>
</div>