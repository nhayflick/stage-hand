<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category %>
</p>

<p>
  <strong>Name:</strong>
  <%= @listing.name %>
</p>

<p>
  <strong>Rate:</strong>
  <%= @listing.rate %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <% if @request %>
    <% if @request.user_id.nil? %>
      <strong>Request this rental:</strong>
      <%= form_for [@listing, @request] do |f| %>
          <%= f.label :note %>
          <%= f.text_field :note %>
          <%= f.submit 'Send' %>
      <% end %>
    <% else %>
      <strong> Request Sent </strong>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>
