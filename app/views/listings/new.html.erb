<h1>New listing</h1>

<%= form_for @listing do |f| %>
	<% if @listing.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

	  <ul>
	  <% @listing.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	  </ul>
	</div>
	<% end %>

	<div><%=f.label :name %><br>
	<%= f.text_field :name %></div>

	<div><%= f.label :category %><br>
	<%= f.select :category, Listing.categories.map {|value| [value, value] } %></div>

	<div><%=f.label :description %><br>
	<%= f.text_field :description %></div>

	<div><%=f.label :rate %><br>
	<%= f.number_field :rate %></div>

 	<%= f.fields_for(:listing_images) do |photo| %>
	    <div class="field">
	      <%= photo.label :image %><br />
	      <%= photo.file_field :image %>
	    </div>
 	<% end %>

	<div><%= f.submit "Submit" %></div>


<% end %>

<%= link_to 'Back', listings_path %>
