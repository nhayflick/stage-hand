<h1>New listing</h1>

<%= form_for @listing do |f| %>

	<div><%=f.label :name %><br>
	<%= f.text_field :name %></div>

	<select name='listing[category_id]'>
  	</select>

	<div><%=f.label :description %><br>
	<%= f.text_field :description %></div>

	<div><%=f.label :rate %><br>
	<%= f.number_field :rate %></div>

	<% puts :listing_photos %>

 	<%= f.fields_for(:listing_images) do |photo| %>
	    <div class="field">
	      <%= photo.label :image %><br />
	      <%= photo.file_field :image %>
	    </div>
 	<% end %>

	<div><%= f.submit "Submit" %></div>


<% end %>

<%= link_to 'Back', listings_path %>
