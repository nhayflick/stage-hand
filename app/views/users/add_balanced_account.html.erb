
<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center>
          <h2>Connect Your Bank Account</h2>
        </center>
      </div>
      <div class="panel-body">
        <center>
        <%= form_for(@user, :url => create_balanced_account_user_url, :html => {:id => "bank-form", :class => "scenius-form"}) do |f| %>
 			<div class="form-group">
	            <label>Account Holder's Name</label>
	            <input type="text" id="ba-name" class="form-control" autocomplete="off" placeholder="John Doe" />
			</div>
			<div class="form-group">
	            <label>Routing Number</label>
	            <input type="text" id="ba-rn" class="form-control" autocomplete="off" placeholder="322271627" />
			</div>
			<div class="form-group">
	            <label>Account Number</label>
	            <input type="text" id="ba-an" class="form-control" autocomplete="off" placeholder="8887776665555" />
			</div>
	        <a id="bank-submit" class="btn btn-large btn-primary">Submit</a><br /><br />
	        <img src="https://balancedpowered.s3.amazonaws.com/secured-2-3.png"></img>
        <% end %>
      </center>
      </div>
    </div>
  </div>
</div>