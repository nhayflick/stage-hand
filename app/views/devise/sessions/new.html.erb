<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center>
			<h2>Welcome Back</h2>
		</center>
      </div>
      <div class="panel-body">
      	<center>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "scenius-form"}) do |f| %>
			<br>
			<%= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-block btn-facebook" do %>
	            <span class="fa-stack fa-lg">
	              <i class="fa fa-square fa-stack-2x"></i>
	              <i class="fa fa-facebook fa-stack-1x fa-inverse facebook"></i>
	            </span>&nbsp; <b>Sign in with Facebook</b>
          	<% end %>
          <br>
          <b>or sign in with email...</b>
          <br><br>
			  <div class="form-group"><%= f.label :email %><br />
			  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>

			  <div class="form-group"><%= f.label :password %><br />
			  <%= f.password_field :password, :class => "form-control" %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>
			  <br>
			  <div><%= f.submit "Sign in", :class => "btn btn-scenius btn-block" %></div>
			<% end %>

			<%= render "devise/shared/links" %>
		</center>
	  </div>
    </div>
  </div>
</div>
