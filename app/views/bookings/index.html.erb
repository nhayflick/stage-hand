<h1>Listing bookings</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Listing</th>
      <th>Note</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Accepted</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.sender.username %></td>
        <td><%= booking.listing_id %></td>
        <td><%= booking.note %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= booking.accepted_at %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
